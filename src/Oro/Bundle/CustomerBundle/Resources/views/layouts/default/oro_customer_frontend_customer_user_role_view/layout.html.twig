{% block _customer_user_role_view_container_wrap_widget %}
    {% set attr = attr|merge({ class: attr.class|default('') ~ " grid" }) %}
    <div {{ block('block_attributes') }}>
        <div class="grid__row">
            {{ block_widget(block) }}
        </div>
    </div>
{% endblock %}

{% block _customer_user_role_back_link_widget %}
    {% set attr = attr|merge({ class: attr.class|default('') ~ " oro-customer-user-role__back-link grid__column grid__column--6" }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block _customer_user_role_top_actions_widget %}
    {% set attr = attr|merge({ class: attr.class|default('') ~ " oro-customer-user-role__controls-list grid__column grid__column--6" }) %}
    <div {{ block('block_attributes') }}>
        <div class="pull-right">
            {{ block_widget(block) }}
        </div>
    </div>
{% endblock %}

{% block _customer_user_role_items_view_privileges_widget %}
    {% import 'OroUIBundle::macros.html.twig' as UI %}

    <div {{ UI.renderPageComponentAttributes({
        module: 'orouser/js/components/role/entity-category-tabs-component',
        options: options.tabsOptions
    }) }}></div>

    {{ block_widget(block) }}

    <div class="role-capability-set" {{ UI.renderPageComponentAttributes({
        module: 'orouser/js/components/role/capability-set-component',
        options: options.capabilitySetOptions|merge({ readonly: true })
    }) }}></div>
{% endblock %}

{% block _customer_user_role_items_view_users_widget %}
    <h3 class="customer-navigation-title mb2-md mb2-sm">
        {{ 'oro.customer.frontend.sections.customer_user_role.users.label'|trans }}
    </h3>
    {{ block_widget(block) }}
{% endblock %}
