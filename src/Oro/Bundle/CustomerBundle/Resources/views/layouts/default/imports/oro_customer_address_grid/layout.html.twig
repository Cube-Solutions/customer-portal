{% block __oro_customer_address_grid__addresses_head_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " page-title-actions-wrapper"
    }) %}
    <div {{ block('block_attributes') }}>
        {{ block_widget(block) }}
    </div>
{% endblock %}

{% block __oro_customer_address_grid__addresses_head_title_widget %}
