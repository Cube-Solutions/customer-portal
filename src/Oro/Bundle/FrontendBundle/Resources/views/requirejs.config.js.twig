require({
    config: {
        'oroui/js/app': {routeLinks: ''},
        'controllers/page-controller': {fullRedirect: true},
        'orofilter/js/datafilter-builder': {enableToggleFilters: true},
        'orodatagrid/js/app/views/column-manager/column-manager-collection-view': {
            templateSelector: '#frontend-column-manager-collection-tpl',
            fallbackSelector: '.datagrid-manager__no-columns'
        },
        'orodatagrid/js/app/views/column-manager/column-manager-item-view': {
            templateSelector: '#frontend-column-manager-item-tpl'
        },
        'orodatagrid/js/app/views/column-manager/column-manager-view': {
            templateSelector: '#frontend-column-manager-tpl'
        },
        'orodatagrid/js/app/views/column-manager/column-manager-filter-view': {
            templateSelector: '#frontend-column-manager-filter-tpl'
        },
        'oroui/js/modal': {
            defaults: {
                templateSelector: '#modal-tpl',
                okButtonClass: 'btn btn--info ok'
            }
        },
        'oro/filter/text-filter': {
            notAlignCriteria: false
        },
        'oro/filter/date-filter': {
            inputClass: 'input input--size-m date-visual-element'
        },
        'oro/filter/datetime-filter': {
            inputClass: 'input input--size-m datetime-visual-element',
            timeInputAttrs: {
                'class': 'input input--size-m timepicker-input',
                'placeholder': 'oro.form.choose_time'
            }
        },
        'orofilter/js/filters-manager': {
            dropdownContainer: '.filter-item'
        }
    },
    paths: {
        {% if app.debug %}
        'oro/routes': '{{ path('oro_frontend_js_routing_js', {"callback": "fos.Router.setData"}) }}'
        {% else %}
        'oro/routes': {{ asset('js/frontend_routes.js', 'routing')|json_encode|raw }}
        {% endif %}
    }
});
