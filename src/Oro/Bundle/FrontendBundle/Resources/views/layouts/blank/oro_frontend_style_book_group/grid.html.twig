            props: {
                title: {
                    label: 'Title',
                    value: 'Confirmation'
                },
                okText: 'OK',
                cancelText: 'Cancel',
                okButtonClass: 'btn ok btn--info',
                cancelButtonClass: 'btn cancel',
                handleClose: false,
                allowCancel: true,
                allowOk: true,
                content: {
